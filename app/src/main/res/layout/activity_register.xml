<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFB"
    android:fillViewport="true"
    android:theme="@style/ThemeOverlay.MaterialComponents.Light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="60dp"
        android:paddingBottom="32dp"
        android:paddingHorizontal="24dp">

        <!-- App Logo with Teal Background -->
        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="40dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#14B8A6">

            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_logo"
                android:contentDescription="App Logo"
                app:tint="#FFFFFF" />
        </androidx.cardview.widget.CardView>

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Create Account"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#111827"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Join the campus network"
            android:textSize="14sp"
            android:textColor="#6B7280"
            android:layout_marginBottom="40dp" />

        <!-- Registration Form Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Name Input Label -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Full Name"
                    android:textColor="#9CA3AF"
                    android:textSize="11sp"
                    android:layout_marginBottom="8dp"/>

                <!-- Name Input -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/info_field_bg"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="4dp"
                    android:layout_marginBottom="20dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_menu_myplaces"
                        app:tint="#14B8A6"
                        android:layout_marginEnd="12dp"/>

                    <EditText
                        android:id="@+id/etName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Enter your full name"
                        android:inputType="textPersonName"
                        android:padding="12dp"
                        android:textSize="15sp"
                        android:textColor="#111827"
                        android:textColorHint="#9CA3AF"
                        android:background="@android:color/transparent" />
                </LinearLayout>

                <!-- Email Input Label -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="College Email"
                    android:textColor="#9CA3AF"
                    android:textSize="11sp"
                    android:layout_marginBottom="8dp"/>

                <!-- Email Input -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/info_field_bg"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="4dp"
                    android:layout_marginBottom="20dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_dialog_email"
                        app:tint="#14B8A6"
                        android:layout_marginEnd="12dp"/>

                    <EditText
                        android:id="@+id/etEmail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Enter your email"
                        android:inputType="textEmailAddress"
                        android:padding="12dp"
                        android:textSize="15sp"
                        android:textColor="#111827"
                        android:textColorHint="#9CA3AF"
                        android:background="@android:color/transparent" />
                </LinearLayout>

                <!-- Mobile Input Label -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mobile Number"
                    android:textColor="#9CA3AF"
                    android:textSize="11sp"
                    android:layout_marginBottom="8dp"/>

                <!-- Mobile Input -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/info_field_bg"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="4dp"
                    android:layout_marginBottom="20dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/stat_sys_phone_call"
                        app:tint="#14B8A6"
                        android:layout_marginEnd="12dp"/>

                    <EditText
                        android:id="@+id/etMobile"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Enter your mobile number"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:padding="12dp"
                        android:textSize="15sp"
                        android:textColor="#111827"
                        android:textColorHint="#9CA3AF"
                        android:background="@android:color/transparent" />
                </LinearLayout>

                <!-- Password Input Label -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:textColor="#9CA3AF"
                    android:textSize="11sp"
                    android:layout_marginBottom="8dp"/>

                <!-- Password Input -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/info_field_bg"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="4dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_lock_lock"
                        app:tint="#14B8A6"
                        android:layout_marginEnd="12dp"/>

                    <EditText
                        android:id="@+id/etPassword"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Min 6 characters"
                        android:inputType="textPassword"
                        android:padding="12dp"
                        android:textSize="15sp"
                        android:textColor="#111827"
                        android:textColorHint="#9CA3AF"
                        android:background="@android:color/transparent" />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- College Email Warning -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/info_field_bg"
            android:orientation="horizontal"
            android:padding="12dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/tvCollegeEmailNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="⚠️ Use your official @iiitsonepat.ac.in email"
                android:textSize="13sp"
                android:textColor="#92400E"
                android:gravity="center" />
        </LinearLayout>

        <!-- Sign Up Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#14B8A6"
            android:paddingVertical="14dp"
            android:text="Create Account"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold"
            app:cornerRadius="16dp"
            android:layout_marginBottom="24dp" />

        <!-- Divider -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#E5E7EB" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OR"
                android:textColor="#9CA3AF"
                android:textSize="12sp"
                android:paddingHorizontal="16dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#E5E7EB" />
        </LinearLayout>

        <!-- Login Link -->
        <TextView
            android:id="@+id/tvGoToLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Already have an account? Log In"
            android:textColor="#14B8A6"
            android:textSize="15sp"
            android:textStyle="bold"
            android:padding="12dp" />

    </LinearLayout>
</ScrollView>