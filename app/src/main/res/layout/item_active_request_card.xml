<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvRequestTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notebook"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#111827" />

            <LinearLayout
                android:id="@+id/layoutPickup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="6dp">

                <ImageView
                    android:id="@+id/ivPickupIcon"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_map_pin"
                    app:tint="#6B7280" />

                <TextView
                    android:id="@+id/tvPickupLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stationery Shop"
                    android:textSize="13sp"
                    android:textColor="#6B7280"
                    android:layout_marginStart="5dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutDropoff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp">

                <ImageView
                    android:id="@+id/ivDropoffIcon"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_map_pin"
                    app:tint="#14B8A6" />

                <TextView
                    android:id="@+id/tvDropoffLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hostel C"
                    android:textSize="13sp"
                    android:textColor="#6B7280"
                    android:layout_marginStart="5dp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tvViewDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View â†’"
            android:textColor="#14B8A6"
            android:textStyle="bold"
            android:textSize="14sp"
            android:paddingStart="12dp"
            android:paddingEnd="4dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless" />
    </LinearLayout>
</androidx.cardview.widget.CardView>