<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFF3E0" tools:context=".OrderConfirmationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/tvThankYou"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thank you for your order, @username!"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:gravity="center"
            android:padding="16dp"
            android:background="@drawable/bg_header_thanks"
            android:layout_marginBottom="20dp"
            android:elevation="4dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardOrderItems"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="8dp"
            app:cardCornerRadius="18dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="18dp">

                <TextView
                    android:id="@+id/tvOrderItemsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Order Items"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#FF9800" android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:id="@+id/layoutOrderItems"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:divider="@drawable/divider_orange_thin"
                    android:showDividers="middle">

                    <TextView
                        android:id="@+id/tvSampleItem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="â€¢ 2x Apples"
                        android:textSize="16sp"
                        android:textColor="#616161"
                        android:paddingVertical="8dp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <EditText
            android:id="@+id/etExpectedPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter expected total price"
            android:inputType="numberDecimal"
            android:padding="14dp"
            android:background="@drawable/et_background_modern"
            android:textColor="#333333"
            android:textSize="16sp"
            android:layout_marginBottom="20dp" />

        <Button
            android:id="@+id/btnSubmitPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm Price"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:backgroundTint="#FFB300"
            android:textColor="@android:color/white"
            android:paddingVertical="14dp"
            android:layout_marginBottom="30dp"
            android:elevation="6dp"
            android:stateListAnimator="@null" />

        <TextView
            android:id="@+id/tvFinalPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Final Price: $0.00"
            android:textColor="#E65100"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:visibility="gone"
            android:layout_marginTop="20dp" />

        <Button
            android:id="@+id/btnReturnHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Return to Home"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:backgroundTint="#FF6F00" android:textColor="@android:color/white"
            android:elevation="5dp"
            android:visibility="gone"
            android:layout_marginTop="20dp"
            android:paddingVertical="14dp"
            android:stateListAnimator="@null" />

    </LinearLayout>
</ScrollView>