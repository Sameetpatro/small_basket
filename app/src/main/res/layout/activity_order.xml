<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFB"
    android:fitsSystemWindows="false"
    tools:context=".OrderActivity">

    <!-- Header Section with Gradient Background -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_teal_gradient"
        android:paddingTop="48dp"
        android:paddingBottom="24dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Back Button and Title Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:contentDescription="Back"
                android:focusable="true"
                android:padding="8dp"
                android:src="@drawable/ic_arrow_back"
                app:tint="#FFFFFF" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Title + Priority Toggle Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvRequestsTitle"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="Request Details"
                        android:textColor="#FFFFFF"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <!-- Priority Toggle -->
                    <Switch
                        android:id="@+id/priority"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Priority"
                        android:textColor="#FFFFFF"
                        android:trackTint="@color/white"
                        android:thumbTint="@color/white"/>
                </LinearLayout>

                <!-- Subtitle -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alpha="0.9"
                    android:text="What do you need delivered?"
                    android:textColor="#E6FFFFFF"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintBottom_toTopOf="@id/btnPlaceNow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Main Card Container -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Item Name -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Item name *"
                        android:textSize="14sp"
                        android:textColor="#6B7280"
                        android:layout_marginBottom="8dp" />

                    <EditText
                        android:id="@+id/item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="e.g., Lunch, Notebook, Charger"
                        android:textColorHint="#9CA3AF"
                        android:textColor="#111827"
                        android:textSize="15sp"
                        android:background="@drawable/bg_input_rounded"
                        android:padding="12dp"
                        android:minHeight="48dp"
                        android:layout_marginBottom="16dp" />

                    <!-- Pickup Location Label -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pickup location *"
                        android:textSize="14sp"
                        android:textColor="#6B7280"
                        android:layout_marginBottom="8dp" />

                    <!-- Pickup Location Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:background="@drawable/bg_input_rounded"
                            android:gravity="center_vertical"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:minHeight="48dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_map_pin"
                                android:layout_marginEnd="8dp"
                                android:contentDescription="Pickup location icon"
                                app:tint="#6B7280" />

                            <EditText
                                android:id="@+id/pickup"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:hint="Location name"
                                android:textColorHint="#9CA3AF"
                                android:textColor="#111827"
                                android:textSize="16sp"
                                android:background="@android:color/transparent"
                                android:padding="0dp" />
                        </LinearLayout>

                        <Spinner
                            android:id="@+id/pickupArea"
                            android:layout_width="128dp"
                            android:layout_height="48dp"
                            android:background="@drawable/bg_input_rounded"
                            android:entries="@array/pickup_areas"
                            android:spinnerMode="dropdown"
                            android:layout_marginStart="8dp"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/pickup_error"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#EF4444"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="16dp"
                        android:visibility="gone" />

                    <!-- Drop Location Label -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Drop location *"
                        android:textSize="14sp"
                        android:textColor="#6B7280"
                        android:layout_marginBottom="8dp" />

                    <!-- Drop Location Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:background="@drawable/bg_input_rounded"
                            android:gravity="center_vertical"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:minHeight="48dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_map_pin"
                                android:layout_marginEnd="8dp"
                                android:contentDescription="Drop location icon"
                                app:tint="#14B8A6" />

                            <EditText
                                android:id="@+id/drop"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:hint="Your location"
                                android:textColorHint="#9CA3AF"
                                android:textColor="#111827"
                                android:textSize="16sp"
                                android:background="@android:color/transparent"
                                android:padding="0dp" />
                        </LinearLayout>

                        <Spinner
                            android:id="@+id/dropArea"
                            android:layout_width="128dp"
                            android:layout_height="48dp"
                            android:background="@drawable/bg_input_rounded"
                            android:entries="@array/drop_areas"
                            android:spinnerMode="dropdown"
                            android:layout_marginStart="8dp"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/drop_error"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#EF4444"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="16dp"
                        android:visibility="gone" />

                    <!-- Fare Input Row -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Delivery fee"
                        android:textSize="14sp"
                        android:textColor="#6B7280"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:orientation="horizontal"
                        android:background="@drawable/bg_input_rounded"
                        android:gravity="center_vertical"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_rupee"
                            android:layout_marginEnd="4dp"
                            android:contentDescription="Currency icon"
                            app:tint="#6B7280" />

                        <EditText
                            android:id="@+id/fare"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="₹0"
                            android:textColorHint="#9CA3AF"
                            android:textColor="#111827"
                            android:textSize="14sp"
                            android:inputType="numberDecimal"
                            android:background="@android:color/transparent"
                            android:padding="0dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/fare_error"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#EF4444"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="16dp"
                        android:visibility="gone" />

                    <!-- Deadline Label -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Request expires in"
                        android:textSize="14sp"
                        android:textColor="#6B7280"
                        android:layout_marginBottom="8dp" />

                    <!-- Deadline Buttons Row 1 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <Button
                            android:id="@+id/deadline_30m"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="44dp"
                            android:text="30m"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#111827"
                            android:background="@drawable/bg_button_outline"
                            android:stateListAnimator="@null"
                            android:layout_marginEnd="8dp" />

                        <Button
                            android:id="@+id/deadline_1h"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="44dp"
                            android:text="1h"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#111827"
                            android:background="@drawable/bg_button_outline"
                            android:stateListAnimator="@null"
                            android:layout_marginEnd="8dp" />

                        <Button
                            android:id="@+id/deadline_2h"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="44dp"
                            android:text="2h"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#111827"
                            android:background="@drawable/bg_button_outline"
                            android:stateListAnimator="@null"
                            android:layout_marginEnd="8dp" />

                        <Button
                            android:id="@+id/deadline_4h"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="44dp"
                            android:text="4h"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#111827"
                            android:background="@drawable/bg_button_outline"
                            android:stateListAnimator="@null" />
                    </LinearLayout>

                    <!-- Custom Time Button (Full Width) -->
                    <Button
                        android:id="@+id/deadline_custom"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:text="⏰  Select Custom Time"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#111827"
                        android:background="@drawable/bg_button_outline"
                        android:stateListAnimator="@null"
                        android:layout_marginBottom="8dp" />

                    <!-- Custom Time Display -->
                    <TextView
                        android:id="@+id/tvCustomTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="#14B8A6"
                        android:layout_marginBottom="16dp"
                        android:visibility="gone"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp" />

                    <!-- Notes Label -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Additional notes (optional)"
                        android:textSize="14sp"
                        android:textColor="#6B7280"
                        android:layout_marginBottom="8dp" />

                    <!-- Notes Input -->
                    <EditText
                        android:id="@+id/notes"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:hint="Any special instructions..."
                        android:textColorHint="#9CA3AF"
                        android:textColor="#111827"
                        android:textSize="14sp"
                        android:background="@drawable/bg_input_rounded"
                        android:padding="12dp"
                        android:gravity="top|start"
                        android:inputType="textMultiLine"
                        android:scrollbars="vertical" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <!-- Place Now Button -->
    <Button
        android:id="@+id/btnPlaceNow"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="POST REQUEST"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="@drawable/bg_button_teal_gradient"
        android:hapticFeedbackEnabled="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:elevation="0dp"
        android:stateListAnimator="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>