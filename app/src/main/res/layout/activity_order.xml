<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".OrderActivity">

    <!-- Header Section -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="24dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- App Icon -->
        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_shopping_cart"
            android:contentDescription="Small Basket App Logo"
            android:layout_marginEnd="8dp" />

        <!-- Title -->
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Place Delivery Order"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#333333" />

        <!-- Order Priority (Top Right) -->
        <LinearLayout
            android:id="@+id/priorityContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Normal"
                android:textColor="#757575"
                android:layout_marginEnd="6dp"
                android:textSize="14sp" />

            <Switch
                android:id="@+id/swPriority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:thumbTint="#FFFFFF"
                android:trackTint="#FFC107"
                android:minHeight="40dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Emergency"
                android:textStyle="bold"
                android:textColor="#FF9800"
                android:layout_marginStart="6dp"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintBottom_toTopOf="@id/btnPlaceNow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Dynamic Item Container -->
            <TextView style="@style/InputLabel" android:text="Items" />
            <LinearLayout
                android:id="@+id/llItemContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                style="@style/InputBox"
                />

            <Button
                android:id="@+id/btnAddItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Item"
                android:textColor="@android:color/white"
                android:backgroundTint="#FF9800"
                android:layout_marginTop="8dp"
                android:minHeight="30dp"/>

            <!-- Specific Pickup Location -->
            <TextView style="@style/InputLabel" android:text="Specific Pickup Location" />
            <EditText
                android:id="@+id/etSpecificPickupLocation"
                style="@style/InputBox"
                android:hint="Enter building name, room number, or detailed address" />

            <!-- Pickup Area -->
            <TextView style="@style/InputLabel" android:text="Pickup Area" />
            <LinearLayout style="@style/InputBoxContainer">
                <Spinner
                    android:id="@+id/spPickupLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/location_areas"
                    android:spinnerMode="dropdown" />
            </LinearLayout>

            <!-- Drop Location -->
            <TextView style="@style/InputLabel" android:text="Specific Drop Location" />
            <EditText
                android:id="@+id/spDropLocation"
                style="@style/InputBox"
                android:hint="Enter building name, room number, or detailed address" />

            <!-- Drop Area -->
            <TextView style="@style/InputLabel" android:text="Drop Area" />
            <LinearLayout style="@style/InputBoxContainer">
                <Spinner
                    android:id="@+id/spDropArea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/location_areas"
                    android:spinnerMode="dropdown" />
            </LinearLayout>

            <!-- Reward -->
            <TextView style="@style/InputLabel" android:text="Reward" />
            <LinearLayout style="@style/InputBoxContainer">
                <TextView
                    android:id="@+id/tvReward"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="10%"
                    android:textSize="18sp"
                    android:textColor="#FF9800"
                    android:textStyle="bold"
                    android:padding="12dp" />
            </LinearLayout>

            <!-- Best Before -->
            <TextView style="@style/InputLabel" android:text="Best Before" />
            <EditText
                android:id="@+id/etBestBeforeTime"
                style="@style/InputBox"
                android:hint="Select time"
                android:focusable="false"
                android:clickable="true" />

            <!-- Deadline -->
            <TextView style="@style/InputLabel" android:text="Deadline" />
            <EditText
                android:id="@+id/etDeadlineTime"
                style="@style/InputBox"
                android:hint="Select time"
                android:focusable="false"
                android:clickable="true" />

            <!-- Notes -->
            <TextView style="@style/InputLabel" android:text="Additional Notes" />
            <EditText
                android:id="@+id/etNote"
                style="@style/InputBox"
                android:minLines="4"
                android:gravity="top|start"
                android:hint="Provide any specific instructions or details here..." />
        </LinearLayout>
    </ScrollView>

    <!-- Place Now Button -->
    <Button
        android:id="@+id/btnPlaceNow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="PLACE NOW"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:backgroundTint="#FF9800"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        android:minHeight="60dp"
        app:cornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
