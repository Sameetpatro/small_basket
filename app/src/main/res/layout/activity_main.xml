<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/motionLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_teal_gradient"
    android:fitsSystemWindows="true"
    app:layoutDescription="@xml/scene_swipe_up">

    <!-- Glass Blur Overlay - MUST BE FIRST -->
    <View
        android:id="@+id/glassBlurOverlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/glass_card_bg"
        android:alpha="0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- LARGER Logo for better visual impact -->
    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:contentDescription="@string/logo"
        android:elevation="4dp"
        android:src="@drawable/ic_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.35"
        app:tint="@android:color/white" />

    <!-- NEW: Intro Card - Hidden initially, appears after swipe -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardIntro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:alpha="0"
        android:visibility="gone"
        android:elevation="12dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="20dp"
        app:cardElevation="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.42">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="28dp">

            <!-- Card Icon -->
            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_shopping_cart"
                app:tint="#14B8A6"
                android:layout_marginBottom="16dp"/>

            <!-- Card Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Welcome to SmallBasket"
                android:textColor="#1F2937"
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="12dp"/>

            <!-- Card Description -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Your neighborhood grocery store, now at your fingertips"
                android:textColor="#6B7280"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="20dp"/>

            <!-- Feature 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/circle_teal"
                    android:gravity="center"
                    android:text="ðŸ›’"
                    android:textSize="18sp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:text="Browse fresh groceries"
                    android:textColor="#374151"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif"/>
            </LinearLayout>

            <!-- Feature 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/circle_teal"
                    android:gravity="center"
                    android:text="âš¡"
                    android:textSize="18sp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:text="Quick and easy checkout"
                    android:textColor="#374151"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif"/>
            </LinearLayout>

            <!-- Feature 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/circle_teal"
                    android:gravity="center"
                    android:text="ðŸšš"
                    android:textSize="18sp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:text="Fast delivery to your door"
                    android:textColor="#374151"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif"/>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Tagline - Initially GONE, shows after swipe -->
    <TextView
        android:id="@+id/tvTagline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#D0ECE7"
        android:textSize="22sp"
        android:fontFamily="sans-serif-medium"
        android:visibility="invisible"
        android:alpha="0"
        android:letterSpacing="0.05"
        app:layout_constraintTop_toBottomOf="@id/imgLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:elevation="4dp"/>

    <TextView
        android:id="@+id/tvSwipeHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/swipe_hint"
        android:textColor="#B3FFFFFF"
        android:textSize="16sp"
        android:fontFamily="sans-serif-light"
        android:drawableTop="@drawable/ic_arrow_up"
        android:drawablePadding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="80dp"
        android:elevation="4dp"/>

    <Button
        android:id="@+id/btnGoToRegister"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/get_started"
        android:textAllCaps="false"
        android:background="@drawable/orange_button"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="16sp"
        android:padding="16dp"
        android:alpha="0"
        android:enabled="false"
        android:elevation="8dp"
        app:layout_constraintBottom_toTopOf="@id/btnGoToLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/btnGoToLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/already_have_account"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:alpha="0"
        android:enabled="false"
        android:clickable="false"
        android:paddingVertical="12dp"
        android:paddingHorizontal="16dp"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="80dp" />

</androidx.constraintlayout.motion.widget.MotionLayout>