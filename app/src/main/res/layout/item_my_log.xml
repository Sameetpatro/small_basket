<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="16dp"
    app:cardElevation="1dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title (was tvLogItems) -->
        <TextView
            android:id="@+id/tvLogItems"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lunch from Canteen"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#111827"
            android:fontFamily="sans-serif-medium"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginBottom="12dp"
            tools:text="Lunch from Canteen" />

        <!-- Pickup Location with Icon (was tvLogPickup) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:contentDescription="Pickup location"
                android:src="@drawable/ic_map_pin_amber"
                app:tint="#F59E0B" />

            <TextView
                android:id="@+id/tvLogPickup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Canteen"
                android:textSize="14sp"
                android:textColor="#6B7280"
                android:fontFamily="sans-serif"
                android:layout_marginStart="8dp"
                tools:text="Canteen" />
        </LinearLayout>

        <!-- Dropoff Location with Icon (was tvLogDrop) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_map_pin_teal"
                android:contentDescription="Drop-off location"
                app:tint="#14B8A6" />

            <TextView
                android:id="@+id/tvLogDrop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hostel A"
                android:textSize="14sp"
                android:textColor="#6B7280"
                android:fontFamily="sans-serif"
                android:layout_marginStart="8dp"
                tools:text="Hostel A" />
        </LinearLayout>

        <!-- Bottom Row: Reward (Fee) and Date (Time) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Reward = Fee -->
            <TextView
                android:id="@+id/tvLogReward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹25"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#14B8A6"
                android:fontFamily="sans-serif-medium"
                tools:text="₹25" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" • "
                android:textSize="14sp"
                android:textColor="#6B7280"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp" />

            <!-- Date = Delivery Time -->
            <TextView
                android:id="@+id/tvLogDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="15 min"
                android:textSize="14sp"
                android:textColor="#6B7280"
                android:fontFamily="sans-serif"
                tools:text="15 min" />

            <!-- Status (e.g., Priority or OPEN) -->
            <TextView
                android:id="@+id/tvLogStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Priority"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#D97706"
                android:background="@drawable/bg_priority_badge"
                android:paddingStart="12dp"
                android:paddingTop="4dp"
                android:paddingEnd="12dp"
                android:paddingBottom="4dp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginStart="12dp"
                android:visibility="gone"
                tools:visibility="visible" />

        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>