<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFB"
    android:fitsSystemWindows="false">

    <!-- Wrap ScrollView in SwipeRefreshLayout for pull-to-refresh -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefresh"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Header Section with Gradient Background -->
                <LinearLayout
                    android:id="@+id/headerLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_teal_gradient"
                    android:paddingTop="48dp"
                    android:paddingBottom="24dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <!-- Top Row: Greeting + Notification -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="20dp">

                        <!-- Greeting Section -->
                        <LinearLayout
                            android:id="@+id/profile_section"
                            android:layout_width="201dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvGreeting"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:alpha="0.85"
                                android:text="Hi,"
                                android:textColor="#FFFFFF"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/tvUserName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Username"
                                android:textColor="#FFFFFF"
                                android:textSize="26sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:alpha="0.9"
                                android:text="Need anything delivered?"
                                android:textColor="#E6FFFFFF"
                                android:textSize="13sp" />
                        </LinearLayout>

                        <!-- Notification Icon -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            app:cardCornerRadius="24dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#0F766E">

                            <ImageView
                                android:id="@+id/notification"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="12dp"
                                android:src="@drawable/ic_noti"
                                android:contentDescription="Notifications"
                                android:clickable="true"
                                android:focusable="true"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                app:tint="#FFFFFF" />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <!-- Request Delivery Button -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#FFA726">

                        <Button
                            android:id="@+id/btnOrderNow"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Request Delivery"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:padding="16dp"
                            android:background="@android:color/transparent"
                            android:textAllCaps="false" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <!-- Content Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">

                    <!-- Campus Network Header -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Campus Network"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#111827"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="12dp" />

                    <!-- Online Count Card -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/onlineUsersCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#FFFFFF">

                        <ViewSwitcher
                            android:id="@+id/onlineUsersSwitcher"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <!-- Shimmer Placeholder -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="16dp"
                                android:gravity="center_vertical">

                                <com.facebook.shimmer.ShimmerFrameLayout
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    app:shimmer_shape="radial">

                                    <View
                                        android:layout_width="48dp"
                                        android:layout_height="48dp"
                                        android:background="@drawable/bg_input_rounded"
                                        android:backgroundTint="#E0F2F1" />
                                </com.facebook.shimmer.ShimmerFrameLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginStart="12dp"
                                    android:orientation="vertical">

                                    <com.facebook.shimmer.ShimmerFrameLayout
                                        android:layout_width="80dp"
                                        android:layout_height="24dp"
                                        app:shimmer_shape="radial">
                                        <View
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="@drawable/bg_input_rounded"
                                            android:backgroundTint="#E0F2F1" />
                                    </com.facebook.shimmer.ShimmerFrameLayout>

                                    <com.facebook.shimmer.ShimmerFrameLayout
                                        android:layout_width="120dp"
                                        android:layout_height="14dp"
                                        android:layout_marginTop="4dp"
                                        app:shimmer_shape="radial">
                                        <View
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="@drawable/bg_input_rounded"
                                            android:backgroundTint="#E0F2F1" />
                                    </com.facebook.shimmer.ShimmerFrameLayout>
                                </LinearLayout>

                                <com.facebook.shimmer.ShimmerFrameLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingStart="10dp"
                                    android:paddingEnd="10dp"
                                    android:paddingTop="6dp"
                                    android:paddingBottom="6dp"
                                    app:shimmer_shape="radial">
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:gravity="center_vertical"
                                        android:background="@drawable/bg_input_rounded"
                                        android:backgroundTint="#E0F2F1"
                                        android:paddingStart="10dp"
                                        android:paddingEnd="10dp"
                                        android:paddingTop="6dp"
                                        android:paddingBottom="6dp">
                                        <View
                                            android:layout_width="6dp"
                                            android:layout_height="6dp"
                                            android:background="@drawable/round_white_bg" />
                                        <View
                                            android:layout_width="30dp"
                                            android:layout_height="12dp"
                                            android:layout_marginStart="5dp"
                                            android:background="@drawable/bg_input_rounded"
                                            android:backgroundTint="#E0F2F1" />
                                    </LinearLayout>
                                </com.facebook.shimmer.ShimmerFrameLayout>
                            </LinearLayout>

                            <!-- Real Content (original layout) -->
                            <LinearLayout
                                android:id="@+id/onlineContent"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="16dp"
                                android:gravity="center_vertical">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    app:cardCornerRadius="12dp"
                                    app:cardElevation="0dp"
                                    app:cardBackgroundColor="#E0F2F1">

                                    <ImageView
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_profile"
                                        app:tint="#14B8A6" />
                                </androidx.cardview.widget.CardView>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginStart="12dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/tvOnlineUsers"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="24"
                                        android:textSize="22sp"
                                        android:textStyle="bold"
                                        android:textColor="#111827" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Users online"
                                        android:textSize="12sp"
                                        android:textColor="#6B7280"
                                        android:layout_marginTop="2dp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical"
                                    android:background="@drawable/bg_input_rounded"
                                    android:backgroundTint="#E0F2F1"
                                    android:paddingStart="10dp"
                                    android:paddingEnd="10dp"
                                    android:paddingTop="6dp"
                                    android:paddingBottom="6dp">

                                    <View
                                        android:id="@+id/liveIndicator"
                                        android:layout_width="6dp"
                                        android:layout_height="6dp"
                                        android:background="@drawable/round_white_bg"
                                        android:backgroundTint="#14B8A6" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Live"
                                        android:textSize="11sp"
                                        android:textStyle="bold"
                                        android:textColor="#14B8A6"
                                        android:layout_marginStart="5dp" />
                                </LinearLayout>
                            </LinearLayout>
                        </ViewSwitcher>
                    </androidx.cardview.widget.CardView>

                    <!-- Active Requests Header -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Active Requests"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#111827"
                        android:layout_marginBottom="12dp" />

                    <!-- Dynamic container for active request cards -->
                    <LinearLayout
                        android:id="@+id/activeRequestsContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />

                    <!-- Spacing for floating nav -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="80dp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <!-- Floating Bottom Navigation Bar -->
    <androidx.cardview.widget.CardView
        android:id="@+id/bottomNavigationCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="12dp"
            android:paddingHorizontal="4dp">

            <!-- Home Tab -->
            <LinearLayout
                android:id="@+id/navHome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="6dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:id="@+id/iconHome"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_home"
                    app:tint="#14B8A6" />

                <TextView
                    android:id="@+id/labelHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:textSize="11sp"
                    android:textColor="#14B8A6"
                    android:textStyle="bold"
                    android:layout_marginTop="3dp" />
            </LinearLayout>

            <!-- Browse Tab -->
            <LinearLayout
                android:id="@+id/navBrowse"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="6dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:id="@+id/iconBrowse"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_shopping_cart"
                    app:tint="#6B7280" />

                <TextView
                    android:id="@+id/labelBrowse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Browse"
                    android:textSize="11sp"
                    android:textColor="#6B7280"
                    android:layout_marginTop="3dp" />
            </LinearLayout>

            <!-- Activity Tab -->
            <LinearLayout
                android:id="@+id/navActivity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="6dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:id="@+id/iconActivity"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_recent_history"
                    app:tint="#6B7280" />

                <TextView
                    android:id="@+id/labelActivity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Activity"
                    android:textSize="11sp"
                    android:textColor="#6B7280"
                    android:layout_marginTop="3dp" />
            </LinearLayout>

            <!-- Profile Tab -->
            <LinearLayout
                android:id="@+id/navProfile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="6dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:id="@+id/iconProfile"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_profile"
                    app:tint="#6B7280" />

                <TextView
                    android:id="@+id/labelProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:textSize="11sp"
                    android:textColor="#6B7280"
                    android:layout_marginTop="3dp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>