<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        app:constraintSetStart="@id/start"
        app:constraintSetEnd="@id/end"
        app:duration="1400"
        app:motionInterpolator="easeInOut"
        app:autoTransition="none">

        <OnSwipe
            app:dragDirection="dragUp"
            app:touchAnchorId="@id/imgLogo"
            app:touchAnchorSide="bottom"
            app:maxAcceleration="80"
            app:dragScale="1.2"/>

        <KeyFrameSet>
            <!-- Ultra smooth logo transition -->
            <KeyAttribute
                app:motionTarget="@id/imgLogo"
                app:framePosition="25"
                android:alpha="1"
                android:scaleX="1.0"
                android:scaleY="1.0"/>

            <KeyAttribute
                app:motionTarget="@id/imgLogo"
                app:framePosition="50"
                android:alpha="1"
                android:scaleX="0.92"
                android:scaleY="0.92"/>

            <KeyAttribute
                app:motionTarget="@id/imgLogo"
                app:framePosition="75"
                android:alpha="1"
                android:scaleX="0.78"
                android:scaleY="0.78"/>

            <!-- Title smooth scaling -->
            <KeyAttribute
                app:motionTarget="@id/tvAppTitle"
                app:framePosition="25"
                android:alpha="1"
                android:scaleX="1.0"
                android:scaleY="1.0"/>

            <KeyAttribute
                app:motionTarget="@id/tvAppTitle"
                app:framePosition="50"
                android:alpha="1"
                android:scaleX="0.95"
                android:scaleY="0.95"/>

            <KeyAttribute
                app:motionTarget="@id/tvAppTitle"
                app:framePosition="75"
                android:alpha="1"
                android:scaleX="0.88"
                android:scaleY="0.88"/>

            <!-- Tagline fade -->
            <KeyAttribute
                app:motionTarget="@id/tvTagline"
                app:framePosition="25"
                android:alpha="1"/>

            <KeyAttribute
                app:motionTarget="@id/tvTagline"
                app:framePosition="50"
                android:alpha="0.9"/>

            <KeyAttribute
                app:motionTarget="@id/tvTagline"
                app:framePosition="75"
                android:alpha="0.8"/>

            <!-- Swipe hint smooth fade -->
            <KeyAttribute
                app:motionTarget="@id/tvSwipeHint"
                app:framePosition="15"
                android:alpha="1"/>

            <KeyAttribute
                app:motionTarget="@id/tvSwipeHint"
                app:framePosition="40"
                android:alpha="0.5"/>

            <KeyAttribute
                app:motionTarget="@id/tvSwipeHint"
                app:framePosition="65"
                android:alpha="0"/>

            <!-- Glass blur overlay fade in -->
            <KeyAttribute
                app:motionTarget="@id/glassBlurOverlay"
                app:framePosition="30"
                android:alpha="0"/>

            <KeyAttribute
                app:motionTarget="@id/glassBlurOverlay"
                app:framePosition="60"
                android:alpha="0.5"/>

            <KeyAttribute
                app:motionTarget="@id/glassBlurOverlay"
                app:framePosition="100"
                android:alpha="1"/>

            <!-- Buttons elegant fade in -->
            <KeyAttribute
                app:motionTarget="@id/btnGoToRegister"
                app:framePosition="40"
                android:alpha="0"
                android:scaleX="0.9"
                android:scaleY="0.9"/>

            <KeyAttribute
                app:motionTarget="@id/btnGoToRegister"
                app:framePosition="70"
                android:alpha="0.5"
                android:scaleX="0.95"
                android:scaleY="0.95"/>

            <KeyAttribute
                app:motionTarget="@id/btnGoToRegister"
                app:framePosition="100"
                android:alpha="1"
                android:scaleX="1.0"
                android:scaleY="1.0"/>

            <KeyAttribute
                app:motionTarget="@id/btnGoToLogin"
                app:framePosition="45"
                android:alpha="0"
                android:scaleX="0.9"
                android:scaleY="0.9"/>

            <KeyAttribute
                app:motionTarget="@id/btnGoToLogin"
                app:framePosition="75"
                android:alpha="0.5"
                android:scaleX="0.95"
                android:scaleY="0.95"/>

            <KeyAttribute
                app:motionTarget="@id/btnGoToLogin"
                app:framePosition="100"
                android:alpha="1"
                android:scaleX="1.0"
                android:scaleY="1.0"/>
        </KeyFrameSet>
    </Transition>

    <!-- START STATE - Initial centered view -->
    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@id/imgLogo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.42"
            android:alpha="1"
            android:scaleX="1.0"
            android:scaleY="1.0"/>

        <Constraint
            android:id="@id/tvAppTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/imgLogo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            android:alpha="1"
            android:scaleX="1.0"
            android:scaleY="1.0"/>

        <Constraint
            android:id="@id/tvTagline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvAppTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"
            android:alpha="1"/>

        <Constraint
            android:id="@id/tvSwipeHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="60dp"
            android:alpha="1"/>

        <!-- Glass blur overlay hidden -->
        <Constraint
            android:id="@id/glassBlurOverlay"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:alpha="0"/>

        <Constraint
            android:id="@id/btnGoToRegister"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/btnGoToLogin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="16dp"
            android:alpha="0"
            android:scaleX="0.9"
            android:scaleY="0.9"
            android:translationY="80dp"/>

        <Constraint
            android:id="@id/btnGoToLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="60dp"
            android:alpha="0"
            android:scaleX="0.9"
            android:scaleY="0.9"
            android:translationY="80dp"/>
    </ConstraintSet>

    <!-- END STATE - After swipe UP -->
    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@id/imgLogo"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="90dp"
            android:alpha="1"
            android:scaleX="0.78"
            android:scaleY="0.78"/>

        <Constraint
            android:id="@id/tvAppTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/imgLogo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:alpha="1"
            android:scaleX="0.88"
            android:scaleY="0.88"/>

        <Constraint
            android:id="@id/tvTagline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvAppTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            android:alpha="0.8"/>

        <Constraint
            android:id="@id/tvSwipeHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="60dp"
            android:alpha="0"/>

        <!-- Glass blur overlay fully visible -->
        <Constraint
            android:id="@id/glassBlurOverlay"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:alpha="1"/>

        <Constraint
            android:id="@id/btnGoToRegister"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/btnGoToLogin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="16dp"
            android:alpha="1"
            android:scaleX="1.0"
            android:scaleY="1.0"
            android:translationY="0dp"/>

        <Constraint
            android:id="@id/btnGoToLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="60dp"
            android:alpha="1"
            android:scaleX="1.0"
            android:scaleY="1.0"
            android:translationY="0dp"/>
    </ConstraintSet>

</MotionScene>