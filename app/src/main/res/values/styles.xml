<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Style for the bold, dark gray label text above each input field. -->
    <style name="InputLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>

    <!-- Style for standard EditText fields (Item Title, Note). -->
    <style name="InputBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/et_background</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <!-- Style for LinearLayouts that wrap Spinners, ensuring they share the same background look as EditTexts. -->
    <style name="InputBoxContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/et_background</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>
</resources>