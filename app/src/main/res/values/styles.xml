<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Style for the bold, dark gray label text above each input field. -->
    <style name="InputLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>

    <!-- Style for standard EditText fields (Item Title, Note). -->
    <style name="InputBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/et_background</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <!-- Style for LinearLayouts that wrap Spinners, ensuring they share the same background look as EditTexts. -->
    <style name="InputBoxContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/et_background</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- âš¡ Typography Styles -->
    <style name="HeadingTextStyle">
        <item name="android:textColor">#111827</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="SubHeadingTextStyle">
        <item name="android:textColor">#6B7280</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="BodyTextStyle">
        <item name="android:textColor">#4B5563</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- ðŸ§¾ Info Text Style (used for tvBatch, tvBranch, etc.) -->
    <style name="InfoTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#374151</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- ðŸ’³ Dashboard Stat Number -->
    <style name="StatValueTextStyle">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#14B8A6</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- ðŸ“Š Dashboard Stat Label -->
    <style name="StatLabelTextStyle">
        <item name="android:textColor">#6B7280</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- ðŸ§ Profile Name -->
    <style name="ProfileNameStyle">
        <item name="android:textColor">#111827</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- âœ‰ï¸ Profile Email -->
    <style name="ProfileEmailStyle">
        <item name="android:textColor">#6B7280</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- ðŸ“± Profile Mobile -->
    <style name="ProfileMobileStyle">
        <item name="android:textColor">#4B5563</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
</resources>